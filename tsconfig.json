{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./gateway",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2017"],
    "incremental": true,
    "module": "CommonJS",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./gateway/dist",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2017"
  },
  "include": ["gateway"],
  "exclude": ["node_modules"]
}
